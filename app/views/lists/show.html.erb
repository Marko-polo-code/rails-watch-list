<h1><%= @list.name %></h1>

<h2>Movies</h2>

<div class="card-container">
  <% @list.movies.each do |movie| %>
    <div class="card-product">
      <%= image_tag movie.poster_url, class: "movie-poster" %>
      <div class="card-product-infos">
        <h3><%= movie.title %></h3>
        <p><%= movie.overview %></p>
        <p>Rating: <%= movie.rating %></p>
        <%= link_to "Delete", list_path(@list), class: "button", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    </div>
  <% end %>
</div>

<a><%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "button" %></a>
<a><%= link_to "My Lists", lists_path, class: "button" %></a>
